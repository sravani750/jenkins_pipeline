pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "Building branch: ${env.BRANCH_NAME}"
            }
        }

        stage('Test') {
            steps {
                echo "Testing branch: ${env.BRANCH_NAME}"
            }
        }
    }

    post {
        success {
            echo "Pipeline for ${env.BRANCH_NAME} succeeded"
        }
        failure {
            echo "Pipeline for ${env.BRANCH_NAME} failed"
        }
    }
}
